{
  "manifest_version": 3,
  "name": "Weather Extension",
  "version": "1.0",
  "description": "A beautiful weather extension with glassmorphism design",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.openweathermap.org/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Weather Extension"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}